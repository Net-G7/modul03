<Window x:Class="EmployeeManagement.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement.Views"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="auto" Width="auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="1">
            <DataGrid 
                IsReadOnly="True"
                MouseDoubleClick="employeeDataGrid_MouseDoubleClick"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                Margin="30"
                Height="550"
                BorderThickness="3"
                x:Name="employeeDataGrid"
                FontSize="17"
                ColumnWidth="180"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
        </StackPanel>

        <Grid
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Column="1"
                Width="160"
                Height="60"
                Background="Red"
                Content="Delete"
                FontSize="18"
                BorderThickness="3"
                Foreground="White"
                BorderBrush="Blue"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="150 0 0 40" 
                Click="Delete_Clicked"/>

            <Button 
                Grid.Column="1" 
                Width="160" 
                Height="60" 
                Background="Green"
                Content="Add +" 
                FontSize="18" 
                BorderThickness="3"
                Foreground="White" 
                BorderBrush="Blue" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="0 0 170 40" 
                Click="Add_Employee_Click"/>

            <TextBox 
                x:Name="serchTextBox"
                BorderBrush="Green"
                BorderThickness="3"
                Background="Azure"
                Foreground="Black"
                Height="60"
                Width="350"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="50 0 0 40"
                FontSize="18"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                />

            <Button 
                BorderBrush="Blue"
                BorderThickness="3"
                Content="Search"
                FontSize="18"
                Foreground="Black"
                Grid.Column="0"
                Background="Gray"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Height="60"
                Width="160"
                Margin="0 0 120 40" 
                Click="Search_Employee_Clicked"/>
        </Grid>
    </Grid>
</Window>
